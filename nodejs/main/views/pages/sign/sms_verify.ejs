<body>
<section class="user-form-part">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <div class="user-form-logo">
                    <a href=".."><img src="/images/Bazars_logo-removebg-preview.png" height="120px" style="object-fit: contain;" width="120px" alt="logo"></a>
                </div>
                <div class="user-form-card">
                    <div class="user-form-title">
                        <h2 style="font-size: 20px;text-transform: none;">SMS kodni kiriting</h2>
                        <p style="font-size: smaller;text-transform: none;"> SMS kod <%= phone %> raqamiga yuborildi.</p>
                        <p><?=$error?></p>
                    </div>
                    <form method="post" class="user-form">
                        <input type="text" id="seconds" name="seconds" hidden>
                        <div class="form-group">
                            <input type="number" id="check_sms_code" name="sms_code" class="form-control" placeholder="_ _ _ _" >
                            <label class="form-check-label"  id="check_sms_code_error" style="display: none;"></label>
                        </div>
                        <p style="font-size: smaller;text-transform: none;" class="mb-3" id="code_sms">SMS kutish vaqti: <b id="time_sec"><%= second %></b> sekund</p>

                        <div class="form-button">
                            <button type="submit">Yuborish </button>
                        </div>
                    </form>
                </div>
                <div class="user-form-remind">
                    <p><a href=".." style="text-transform: none;">Bosh sahifaga qaytish</a></p>
                </div>
                <div class="user-form-footer">
                    <p>Bazars | &COPY; Copyright by <a href="#"> DATATECH TEAM </a></p>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    let check_sms_code = document.getElementById("check_sms_code");
    let check_sms_code_error = document.getElementById("check_sms_code_error");
    check_sms_code.addEventListener("keyup", function(e) {
        if(e.target.value.length!=4){
            check_sms_code_error.innerHTML = `SMS kodni to'liq kiriting`
            check_sms_code_error.style.color = "red"
            check_sms_code_error.style.display = "block"
        }
        else {
            check_sms_code_error.innerHTML = ``
            check_sms_code_error.style.color = 'green'
        }
    })
    window.onload = function() {
        let time_sec = document.getElementById("time_sec");
        let code_sms = document.getElementById("code_sms");
        setInterval(() => {
            if(time_sec.innerHTML == "0") {
                clearInterval();
                code_sms.innerHTML=` <a href="?resend=1"> Qayta SMS yuborish </a>`
            }
            else {
                let seconds = parseInt(time_sec.innerHTML)-1
                time_sec.innerHTML  = seconds
                document.getElementById('seconds').value = seconds
            }
        }, 1000);
    }
</script>

